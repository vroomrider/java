package com.java.practice.casting;

import com.java.practice.casting.model.Animal;
import com.java.practice.casting.model.Dog;
import com.java.practice.casting.model.Lion;

public class UpCastingDemo {

	public static void main(String[] args) {

		printInConsole("-- Animal --");
		Animal superClassAnimal = new Animal();
		superClassAnimal.speak();
		superClassAnimal.jump();

		/**
		 * @Upcast
		 * @Description1.When UpCasted the subclass data will not be available but if
		 *                    data is OverRided then info of sub class is available
		 * @Description2.All the other sub class data will be hidden
		 * 
		 */
		printInConsole("\n");
		printInConsole("-- Dog --");
		Animal subClassAnimalDog = new Dog();
		subClassAnimalDog.speak();
		subClassAnimalDog.jump();

		/**
		 * @Description3.Static Methods cannot be overridden rather they will be hidden
		 */
		printInConsole("\n");
		printInConsole("-- Lion --");
		Animal subClassAnimalLion = new Lion();
		subClassAnimalLion.speak();
		subClassAnimalLion.jump();
		subClassAnimalLion.printInConsole("Lion Upcasted to Animal");
	}

	/**
	 * @Printing.Logs.In.Console
	 * @param str
	 */
	public static void printInConsole(String str) {
		System.out.println(str);
	}

}
